{
  "name": "monorec_depth",
  "n_gpu": 1,
  "arch": {
    "type": "MonoRecModel",
    "args": {
      "pretrain_mode": 1,
      "pretrain_dropout": 0.0,
      "augmentation": "depth",
      "use_mono": true,
      "use_stereo": false,
      "checkpoint_location": []
    }
  },
  "data_loader": {
    "type": "KittiOdometryDataloader",
    "args": {
      "dataset_dir": "../data/dataset",
      "depth_folder": "image_depth_sparse",
      "batch_size": 8,
      "frame_count": 2,
      "shuffle": true,
      "validation_split": 0,
      "num_workers": 16,
      "sequences": [
        "01",
        "02",
        "06",
        "08",
        "09",
        "10"
      ],
      "target_image_size": [
        256,
        512
      ],
      "use_color": true,
      "use_color_augmentation": true,
      "use_dso_poses": true,
      "lidar_depth": false,
      "dso_depth": true,
      "return_stereo": true,
      "return_mvobj_mask": true
    }
  },
  "val_data_loader": {
    "type": "KittiOdometryDataloader",
    "args": {
      "dataset_dir": "../data/dataset",
      "depth_folder": "image_depth_annotated",
      "batch_size": 16,
      "frame_count": 2,
      "shuffle": false,
      "validation_split": 0,
      "num_workers": 2,
      "sequences": [
        "00",
        "04",
        "05",
        "07"
      ],
      "target_image_size": [
        256,
        512
      ],
      "max_length": 32,
      "use_color": true,
      "use_color_augmentation": true,
      "use_dso_poses": true,
      "lidar_depth": true,
      "dso_depth": false,
      "return_stereo": true,
      "return_mvobj_mask": true
    }
  },
  "optimizer": {
    "type": "Adam",
    "args": {
      "lr": 1e-4,
      "weight_decay": 0,
      "amsgrad": true
    }
  },
  "loss": "depth_loss",
  "metrics": [
    "a1_sparse_metric",
    "abs_rel_sparse_metric",
    "rmse_sparse_metric"
  ],
  "lr_scheduler": {
    "type": "StepLR",
    "args": {
      "step_size": 65,
      "gamma": 0.1
    }
  },
  "trainer": {
    "compute_mask": false,
    "compute_stereo_pred": false,
    "epochs": 70,
    "save_dir": "saved/",
    "save_period": 1,
    "verbosity": 2,
    "log_step": 4800,
    "val_log_step": 40,
    "alpha": 0.5,
    "max_distance": 80,
    "monitor": "min abs_rel_sparse_metric",
    "timestamp_replacement": "00",
    "tensorboard": true
  }
}
